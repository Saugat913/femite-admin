# Hemp Fashion Admin Panel - Environment Variables
# Copy this file to .env.local and update with your actual values
# See docs/environment.md for detailed documentation

# =============================================================================
# REQUIRED VARIABLES - Must be set for the application to work
# =============================================================================

# Database Connection (Required)
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/hemp_admin

# JWT Secret for authentication (Required)
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters

# Application URLs (Required)
NEXT_PUBLIC_APP_NAME="Femite Hemp Fashion Admin"
NEXT_PUBLIC_APP_URL=http://localhost:3001

# =============================================================================
# ECOMMERCE SITE INTEGRATION (Required for revalidation)
# =============================================================================

# Main ecommerce site URL for cache revalidation
CLIENT_SITE_URL=http://localhost:3000
CLIENT_SITE_REVALIDATION_SECRET=your-revalidation-secret-key

# =============================================================================
# EMAIL CONFIGURATION (Required for notifications)
# =============================================================================

# SMTP Settings - Use Gmail app password for Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@femite.com

# =============================================================================
# CLOUDINARY (Required for image uploads)
# =============================================================================

# Get these from https://cloudinary.com dashboard
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Security (defaults are usually fine)
BCRYPT_ROUNDS=12

# File uploads (defaults: 5MB, images only)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# =============================================================================
# ISR AND CACHING CONFIGURATION
# =============================================================================

# ISR revalidation secret (for external webhooks)
REVALIDATION_SECRET=your-isr-revalidation-secret

# Redis URL for production caching (optional)
REDIS_URL=redis://localhost:6379

# Cache settings
CACHE_DEFAULT_TTL=300
CACHE_MAX_AGE=3600
